<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/avatar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/big_avatar_vertical_margin" >

        <ImageView
            android:id="@+id/big_avatar"
            android:layout_width="@dimen/big_avatar_size"
            android:layout_height="@dimen/big_avatar_size"
            android:layout_centerInParent="true"
            android:background="@drawable/bkg_avatar_border"
            android:contentDescription="@string/avatar_descr"
            android:padding="@dimen/big_avatar_border" />

        <Button
            android:id="@+id/btn_avatar_add"
            android:layout_width="@dimen/btn_add_size"
            android:layout_height="@dimen/btn_add_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/btn_add_horizontal_margin"
            android:layout_toRightOf="@id/big_avatar"
            android:background="@drawable/btn_add_selector" />
        
        <Button
            android:id="@+id/btn_avatar_call"
            android:layout_width="@dimen/btn_call_size"
            android:layout_height="@dimen/btn_call_size"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/btn_add_horizontal_margin"
            android:layout_toLeftOf="@id/big_avatar"
            android:background="@drawable/btn_call_selector" />

    </RelativeLayout>

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar_container"
        android:layout_centerHorizontal="true"
        android:fontFamily="Roboto Medium"
        android:gravity="center"
        android:text="@string/some_girl_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt_name_size" />

</RelativeLayout>